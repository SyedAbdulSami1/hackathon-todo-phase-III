{
  "version": 2,
  "name": "todo-app-with-chatbot",
  "builds": [
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_CHAT_ENABLED": "true",
    "AGENT_MODEL_NAME": "gpt-4",
    "AGENT_PROVIDER": "openai",
    "ENABLE_MCP_TOOLS": "true"
  },
  "github": {
    "enabled": true
  }
}